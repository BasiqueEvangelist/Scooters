  "authors": [
    "Hibi"
  ],
  "contact": {
    "sources": "https://github.com/Hibiii/Scooters"
  },

  "license": "Unlicense",
  "icon": "assets/scooters/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "hibi.scooters.Common"
    ],
    "client": [
      "hibi.scooters.ClientInit"
    ]
  },
  "mixins": [
    "scooters.mixin.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": ">=1.18",
    "java": ">=17"
  }
}
